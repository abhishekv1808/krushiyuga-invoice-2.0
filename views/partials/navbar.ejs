<header class="bg-white">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 lg:py-2">
        <div class="flex h-16 items-center justify-between">
            <div class="flex-1 md:flex md:items-center md:gap-12">
                <a class="block text-teal-600" href="/">
                    <img src="/images/krushiyuga-logo.png" alt="Krushiyuga-logo" class="h-16 w-auto">
                </a>
            </div>

            <div class="md:flex md:items-center md:gap-12 font-semibold">

                <% if (typeof adminEmail==='undefined' || !adminEmail) { %>
                    <!-- User is not logged in as admin -->
                    <div class="flex items-center gap-4">
                        <div class="sm:flex sm:gap-4">
                            <div class="hidden sm:flex">
                                <a class="rounded-md bg-green-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-green-700"
                                    href="/admin-login">
                                    Admin portal
                                </a>
                                <a href="/"
                                    class="ml-4 rounded-md bg-gray-100 px-5 py-2.5 text-sm font-medium text-gray-600 transition hover:bg-gray-200">
                                    Home
                                </a>
                            </div>
                        </div>

                        <div class="block md:hidden">
                            <button class="rounded-sm bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75">
                                <svg xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <% } else { %>
                        <!-- Admin is logged in -->
                        <div class="flex items-center gap-4">
                            <div class="sm:flex sm:gap-4">
                                <div class="hidden sm:flex">
                                    <span class="px-3 py-2 text-sm font-medium text-gray-700">
                                        Welcome, <%= adminEmail %>
                                    </span>
                                    <a href="/admin-portal"
                                        class="ml-4 rounded-md bg-green-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-green-700">
                                        Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</header>