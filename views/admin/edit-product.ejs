<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/navbar.ejs') %>

            <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <!-- Header -->
                <div class="mb-8">
                    <div class="flex items-center space-x-4">
                        <a href="/products" class="text-gray-500 hover:text-gray-700">
                            <i class="fas fa-arrow-left text-lg"></i>
                        </a>
                        <div>
                            <h1 class="text-3xl font-bold text-gray-900">Edit Product</h1>
                            <p class="text-gray-600 mt-1">Update product information and inventory</p>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                        <div class="flex">
                            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">
                                    <%= errorMessage %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <!-- Form -->
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                            <form action="/products/edit/<%= product._id %>" method="POST" class="space-y-6 p-6">
                                <!-- Basic Information -->
                                <div class="border-b border-gray-200 pb-6">
                                    <h3 class="text-lg font-medium text-gray-900 mb-4">Basic Information</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label for="name"
                                                class="block text-sm font-medium text-gray-700 mb-2">Product Name
                                                *</label>
                                            <input type="text" id="name" name="name" value="<%= product.name %>"
                                                required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>

                                        <div>
                                            <label for="category"
                                                class="block text-sm font-medium text-gray-700 mb-2">Category *</label>
                                            <select id="category" name="category" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                                <option value="">Select Category</option>
                                                <option value="Seeds & Planting"
                                                    <%=product.category==='Seeds & Planting' ? 'selected' : '' %>>Seeds
                                                    & Planting</option>
                                                <option value="Fertilizers" <%=product.category==='Fertilizers'
                                                    ? 'selected' : '' %>>Fertilizers</option>
                                                <option value="Pesticides & Herbicides"
                                                    <%=product.category==='Pesticides & Herbicides' ? 'selected' : '' %>
                                                    >Pesticides & Herbicides</option>
                                                <option value="Farm Tools & Equipment"
                                                    <%=product.category==='Farm Tools & Equipment' ? 'selected' : '' %>
                                                    >Farm Tools & Equipment</option>
                                                <option value="Irrigation Supplies"
                                                    <%=product.category==='Irrigation Supplies' ? 'selected' : '' %>
                                                    >Irrigation Supplies</option>
                                                <option value="Organic Products"
                                                    <%=product.category==='Organic Products' ? 'selected' : '' %>
                                                    >Organic Products</option>
                                                <option value="Grains & Cereals"
                                                    <%=product.category==='Grains & Cereals' ? 'selected' : '' %>>Grains
                                                    & Cereals</option>
                                                <option value="Vegetables" <%=product.category==='Vegetables'
                                                    ? 'selected' : '' %>>Vegetables</option>
                                                <option value="Fruits" <%=product.category==='Fruits' ? 'selected' : ''
                                                    %>>Fruits</option>
                                                <option value="Dairy Products" <%=product.category==='Dairy Products'
                                                    ? 'selected' : '' %>>Dairy Products</option>
                                                <option value="Livestock Feed" <%=product.category==='Livestock Feed'
                                                    ? 'selected' : '' %>>Livestock Feed</option>
                                                <option value="Other" <%=product.category==='Other' ? 'selected' : '' %>
                                                    >Other</option>
                                            </select>
                                        </div>

                                        <div class="md:col-span-2">
                                            <label for="description"
                                                class="block text-sm font-medium text-gray-700 mb-2">Description
                                                *</label>
                                            <textarea id="description" name="description" rows="3" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"><%= product.description %></textarea>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pricing & Units -->
                                <div class="border-b border-gray-200 pb-6">
                                    <h3 class="text-lg font-medium text-gray-900 mb-4">Pricing & Units</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                        <div>
                                            <label for="price"
                                                class="block text-sm font-medium text-gray-700 mb-2">Price (â‚¹) *</label>
                                            <input type="number" id="price" name="price" step="0.01" min="0"
                                                value="<%= product.price %>" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>

                                        <div>
                                            <label for="unit" class="block text-sm font-medium text-gray-700 mb-2">Unit
                                                *</label>
                                            <select id="unit" name="unit" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                                <option value="">Select Unit</option>
                                                <option value="kg" <%=product.unit==='kg' ? 'selected' : '' %>>Kilogram
                                                    (kg)</option>
                                                <option value="g" <%=product.unit==='g' ? 'selected' : '' %>>Gram (g)
                                                </option>
                                                <option value="liter" <%=product.unit==='liter' ? 'selected' : '' %>
                                                    >Liter</option>
                                                <option value="ml" <%=product.unit==='ml' ? 'selected' : '' %>
                                                    >Milliliter (ml)</option>
                                                <option value="piece" <%=product.unit==='piece' ? 'selected' : '' %>
                                                    >Piece</option>
                                                <option value="packet" <%=product.unit==='packet' ? 'selected' : '' %>
                                                    >Packet</option>
                                                <option value="bag" <%=product.unit==='bag' ? 'selected' : '' %>>Bag
                                                </option>
                                                <option value="quintal" <%=product.unit==='quintal' ? 'selected' : '' %>
                                                    >Quintal</option>
                                                <option value="ton" <%=product.unit==='ton' ? 'selected' : '' %>>Ton
                                                </option>
                                                <option value="dozen" <%=product.unit==='dozen' ? 'selected' : '' %>
                                                    >Dozen</option>
                                                <option value="meter" <%=product.unit==='meter' ? 'selected' : '' %>
                                                    >Meter</option>
                                                <option value="feet" <%=product.unit==='feet' ? 'selected' : '' %>>Feet
                                                </option>
                                            </select>
                                        </div>

                                        <div>
                                            <label for="gst" class="block text-sm font-medium text-gray-700 mb-2">GST
                                                Rate (%)</label>
                                            <input type="number" id="gst" name="gst" step="0.01" min="0" max="100"
                                                value="<%= product.gst %>"
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>
                                    </div>
                                </div>

                                <!-- Inventory -->
                                <div class="border-b border-gray-200 pb-6">
                                    <h3 class="text-lg font-medium text-gray-900 mb-4">Inventory Management</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                        <div>
                                            <label for="quantityInStock"
                                                class="block text-sm font-medium text-gray-700 mb-2">Current
                                                Stock</label>
                                            <input type="number" id="quantityInStock" name="quantityInStock" min="0"
                                                value="<%= product.quantityInStock %>"
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>

                                        <div>
                                            <label for="minimumStockLevel"
                                                class="block text-sm font-medium text-gray-700 mb-2">Minimum Stock
                                                Level</label>
                                            <input type="number" id="minimumStockLevel" name="minimumStockLevel" min="0"
                                                value="<%= product.minimumStockLevel %>"
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>

                                        <div>
                                            <label for="sku"
                                                class="block text-sm font-medium text-gray-700 mb-2">SKU</label>
                                            <input type="text" id="sku" name="sku" value="<%= product.sku %>"
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>
                                    </div>
                                </div>

                                <!-- Product Codes -->
                                <div class="border-b border-gray-200 pb-6">
                                    <h3 class="text-lg font-medium text-gray-900 mb-4">Product Codes</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-1 gap-6">
                                        <div>
                                            <label for="hsn" class="block text-sm font-medium text-gray-700 mb-2">HSN
                                                Code *</label>
                                            <input type="text" id="hsn" name="hsn" value="<%= product.hsn %>" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                            <p class="text-xs text-gray-500 mt-1">Harmonized System of Nomenclature code
                                                for tax purposes</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Supplier Information -->
                                <div class="border-b border-gray-200 pb-6">
                                    <h3 class="text-lg font-medium text-gray-900 mb-4">Supplier Information</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label for="supplierName"
                                                class="block text-sm font-medium text-gray-700 mb-2">Supplier Name
                                                *</label>
                                            <input type="text" id="supplierName" name="supplierName"
                                                value="<%= product.supplier.name %>" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>

                                        <div>
                                            <label for="supplierContact"
                                                class="block text-sm font-medium text-gray-700 mb-2">Supplier Contact
                                                *</label>
                                            <input type="text" id="supplierContact" name="supplierContact"
                                                value="<%= product.supplier.contact %>" required
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>

                                        <div class="md:col-span-2">
                                            <label for="supplierEmail"
                                                class="block text-sm font-medium text-gray-700 mb-2">Supplier Email
                                                (Optional)</label>
                                            <input type="email" id="supplierEmail" name="supplierEmail"
                                                value="<%= product.supplier.email || '' %>"
                                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                                        </div>
                                    </div>
                                </div>

                                <!-- Product Status -->
                                <div class="pb-6">
                                    <h3 class="text-lg font-medium text-gray-900 mb-4">Product Status</h3>
                                    <div class="flex items-center">
                                        <input type="checkbox" id="isActive" name="isActive" <%=product.isActive
                                            ? 'checked' : '' %>
                                        class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded">
                                        <label for="isActive" class="ml-2 block text-sm text-gray-900">
                                            Active Product
                                        </label>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">Inactive products won't appear in product
                                        listings</p>
                                </div>

                                <!-- Form Actions -->
                                <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                                    <a href="/products"
                                        class="px-6 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                        Cancel
                                    </a>
                                    <button type="submit"
                                        class="px-6 py-2 bg-green-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                        <i class="fas fa-save mr-2"></i>
                                        Update Product
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Product Info -->
                        <div class="mt-6 bg-gray-50 rounded-lg p-4">
                            <h4 class="text-sm font-medium text-gray-900 mb-2">Product Information</h4>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-xs text-gray-600">
                                <div>
                                    <span class="font-medium">Created:</span><br>
                                    <%= new Date(product.createdAt).toLocaleDateString() %>
                                </div>
                                <div>
                                    <span class="font-medium">Last Updated:</span><br>
                                    <%= new Date(product.lastUpdated).toLocaleDateString() %>
                                </div>
                                <div>
                                    <span class="font-medium">Stock Status:</span><br>
                                    <% if (product.quantityInStock===0) { %>
                                        <span class="text-red-600">Out of Stock</span>
                                        <% } else if (product.quantityInStock <=product.minimumStockLevel) { %>
                                            <span class="text-amber-600">Low Stock</span>
                                            <% } else { %>
                                                <span class="text-green-600">In Stock</span>
                                                <% } %>
                                </div>
                                <div>
                                    <span class="font-medium">Product ID:</span><br>
                                    <%= product._id %>
                                </div>
                            </div>
                        </div>
            </main>

            <script>
                // Auto-format price input
                document.getElementById('price').addEventListener('input', function (e) {
                    let value = e.target.value;
                    if (value && !isNaN(value)) {
                        // Ensure maximum 2 decimal places
                        e.target.value = parseFloat(value).toFixed(2);
                    }
                });

                // Auto-hide error messages after 5 seconds
                setTimeout(() => {
                    const alerts = document.querySelectorAll('.bg-red-50');
                    alerts.forEach(alert => {
                        alert.style.transition = 'opacity 0.5s';
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 500);
                    });
                }, 5000);
            </script>

    </body>

    </html>