<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/navbar.ejs') %>

            <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <!-- Header -->
                <div class="mb-8">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <a href="/products" class="text-gray-500 hover:text-gray-700">
                                <i class="fas fa-arrow-left text-lg"></i>
                            </a>
                            <div>
                                <h1 class="text-3xl font-bold text-gray-900">
                                    <%= product.name %>
                                </h1>
                                <p class="text-gray-600 mt-1">Product Details & Information</p>
                            </div>
                        </div>
                        <div class="flex space-x-3">
                            <a href="/products/edit/<%= product._id %>"
                                class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200">
                                <i class="fas fa-edit mr-2"></i>
                                Edit Product
                            </a>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Main Product Information -->
                    <div class="lg:col-span-2 space-y-6">
                        <!-- Basic Information Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Basic Information</h3>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Product Name</label>
                                        <p class="text-lg font-medium text-gray-900">
                                            <%= product.name %>
                                        </p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Category</label>
                                        <span
                                            class="px-3 py-1 text-sm font-medium bg-blue-100 text-blue-800 rounded-full">
                                            <%= product.category %>
                                        </span>
                                    </div>
                                    <div class="md:col-span-2">
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Description</label>
                                        <p class="text-gray-900 leading-relaxed">
                                            <%= product.description %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing & Inventory Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Pricing & Inventory</h3>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Price</label>
                                        <p class="text-2xl font-bold text-green-600">₹<%= product.price.toFixed(2) %>
                                        </p>
                                        <p class="text-sm text-gray-500">per <%= product.unit %>
                                        </p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Current
                                            Stock</label>
                                        <p class="text-xl font-semibold text-gray-900">
                                            <%= product.quantityInStock %>
                                                <%= product.unit %>
                                        </p>
                                        <p class="text-sm text-gray-500">Min: <%= product.minimumStockLevel %>
                                                <%= product.unit %>
                                        </p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">GST Rate</label>
                                        <p class="text-xl font-semibold text-gray-900">
                                            <%= product.gst %>%
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Product Codes Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Product Codes</h3>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">SKU</label>
                                        <p class="text-lg font-mono text-gray-900 bg-gray-100 px-3 py-2 rounded">
                                            <%= product.sku %>
                                        </p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">HSN Code</label>
                                        <p class="text-lg font-mono text-gray-900 bg-gray-100 px-3 py-2 rounded">
                                            <%= product.hsn %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Supplier Information Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Supplier Information</h3>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Supplier
                                            Name</label>
                                        <p class="text-lg font-medium text-gray-900">
                                            <%= product.supplier.name %>
                                        </p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500 mb-1">Contact
                                            Number</label>
                                        <p class="text-lg text-gray-900">
                                            <a href="tel:<%= product.supplier.contact %>" class="hover:text-green-600">
                                                <i class="fas fa-phone mr-2"></i>
                                                <%= product.supplier.contact %>
                                            </a>
                                        </p>
                                    </div>
                                    <% if (product.supplier.email) { %>
                                        <div class="md:col-span-2">
                                            <label class="block text-sm font-medium text-gray-500 mb-1">Email
                                                Address</label>
                                            <p class="text-lg text-gray-900">
                                                <a href="mailto:<%= product.supplier.email %>"
                                                    class="hover:text-green-600">
                                                    <i class="fas fa-envelope mr-2"></i>
                                                    <%= product.supplier.email %>
                                                </a>
                                            </p>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="space-y-6">
                        <!-- Status Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Status</h3>
                            </div>
                            <div class="p-6 space-y-4">
                                <!-- Stock Status -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-500 mb-2">Stock Status</label>
                                    <% if (product.quantityInStock===0) { %>
                                        <span
                                            class="inline-flex items-center px-3 py-1 text-sm font-medium bg-red-100 text-red-800 rounded-full">
                                            <i class="fas fa-times-circle mr-2"></i>Out of Stock
                                        </span>
                                        <% } else if (product.quantityInStock <=product.minimumStockLevel) { %>
                                            <span
                                                class="inline-flex items-center px-3 py-1 text-sm font-medium bg-amber-100 text-amber-800 rounded-full">
                                                <i class="fas fa-exclamation-triangle mr-2"></i>Low Stock
                                            </span>
                                            <% } else { %>
                                                <span
                                                    class="inline-flex items-center px-3 py-1 text-sm font-medium bg-green-100 text-green-800 rounded-full">
                                                    <i class="fas fa-check-circle mr-2"></i>In Stock
                                                </span>
                                                <% } %>
                                </div>

                                <!-- Product Status -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-500 mb-2">Product Status</label>
                                    <% if (product.isActive) { %>
                                        <span
                                            class="inline-flex items-center px-3 py-1 text-sm font-medium bg-green-100 text-green-800 rounded-full">
                                            <i class="fas fa-check mr-2"></i>Active
                                        </span>
                                        <% } else { %>
                                            <span
                                                class="inline-flex items-center px-3 py-1 text-sm font-medium bg-gray-100 text-gray-800 rounded-full">
                                                <i class="fas fa-pause mr-2"></i>Inactive
                                            </span>
                                            <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Timestamps Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Timeline</h3>
                            </div>
                            <div class="p-6 space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-500 mb-1">Created</label>
                                    <p class="text-sm text-gray-900">
                                        <i class="fas fa-calendar-plus mr-2 text-green-500"></i>
                                        <%= new Date(product.createdAt).toLocaleDateString('en-IN', { year: 'numeric' ,
                                            month: 'long' , day: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                                    </p>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-500 mb-1">Last Updated</label>
                                    <p class="text-sm text-gray-900">
                                        <i class="fas fa-edit mr-2 text-blue-500"></i>
                                        <%= new Date(product.lastUpdated).toLocaleDateString('en-IN', { year: 'numeric'
                                            , month: 'long' , day: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Actions Card -->
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                                <h3 class="text-lg font-medium text-gray-900">Actions</h3>
                            </div>
                            <div class="p-6 space-y-3">
                                <a href="/products/edit/<%= product._id %>"
                                    class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-edit mr-2"></i>
                                    Edit Product
                                </a>
                                <button onclick="deleteProduct('<%= product._id %>', '<%= product.name %>')"
                                    class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-trash-alt mr-2"></i>
                                    Delete Product
                                </button>
                                <a href="/products"
                                    class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200 flex items-center justify-center">
                                    <i class="fas fa-arrow-left mr-2"></i>
                                    Back to Products
                                </a>
                            </div>
                        </div>

                        <!-- Quick Stats -->
                        <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-lg shadow-sm text-white p-6">
                            <h3 class="text-lg font-medium mb-4">Quick Stats</h3>
                            <div class="space-y-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-green-100">Total Value</span>
                                    <span class="font-semibold">₹<%= (product.price *
                                            product.quantityInStock).toFixed(2) %></span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-green-100">Unit Value</span>
                                    <span class="font-semibold">₹<%= product.price.toFixed(2) %></span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-green-100">Stock Units</span>
                                    <span class="font-semibold">
                                        <%= product.quantityInStock %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <!-- Delete Confirmation Modal -->
            <div id="deleteModal"
                class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
                <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                    <div class="mt-3 text-center">
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                            <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mt-2">Delete Product</h3>
                        <div class="mt-2 px-7 py-3">
                            <p class="text-sm text-gray-500" id="deleteMessage">
                                Are you sure you want to delete this product? This action cannot be undone.
                            </p>
                        </div>
                        <div class="items-center px-4 py-3">
                            <form id="deleteForm" method="POST" class="inline">
                                <button type="submit"
                                    class="px-4 py-2 bg-red-600 text-white text-base font-medium rounded-md w-24 mr-2 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-300">
                                    Delete
                                </button>
                            </form>
                            <button onclick="closeDeleteModal()"
                                class="px-4 py-2 bg-gray-300 text-gray-800 text-base font-medium rounded-md w-24 hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-300">
                                Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                function deleteProduct(productId, productName) {
                    document.getElementById('deleteMessage').innerHTML =
                        `Are you sure you want to delete "<strong>${productName}</strong>"? This action cannot be undone.`;
                    document.getElementById('deleteForm').action = `/products/delete/${productId}`;
                    document.getElementById('deleteModal').classList.remove('hidden');
                }

                function closeDeleteModal() {
                    document.getElementById('deleteModal').classList.add('hidden');
                }
            </script>

    </body>

    </html>