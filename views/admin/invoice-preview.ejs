<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
        <style>
            @media print {
                .no-print {
                    display: none !important;
                }

                body {
                    background: white !important;
                }

                .invoice-container {
                    box-shadow: none !important;
                    margin: 0 !important;
                }
            }

            .invoice-container {
                max-width: 800px;
                margin: 20px auto;
                background: white;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                border-radius: 8px;
                overflow: hidden;
            }

            .invoice-content {
                padding: 40px;
                font-family: 'Helvetica', 'Arial', sans-serif;
                line-height: 1.4;
                color: #374151;
            }

            .invoice-header {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                margin-bottom: 30px;
                border-bottom: 2px solid #e5e7eb;
                padding-bottom: 20px;
            }

            .invoice-title {
                color: #1f2937;
                font-size: 20px;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .original-text {
                font-size: 10px;
                color: #6b7280;
                text-transform: uppercase;
            }

            .company-logo {
                text-align: right;
            }

            .logo-text {
                font-size: 20px;
                font-weight: bold;
                color: #1f2937;
            }

            .company-details {
                margin: 20px 0;
            }

            .company-name {
                font-size: 14px;
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 5px;
            }

            .company-info {
                font-size: 11px;
                line-height: 1.5;
                color: #4b5563;
            }

            .invoice-meta {
                display: flex;
                gap: 50px;
                margin: 20px 0;
                padding: 15px 0;
                border-top: 1px solid #e5e7eb;
                border-bottom: 1px solid #e5e7eb;
            }

            .meta-item {
                font-size: 11px;
            }

            .meta-label {
                font-weight: bold;
                color: #1f2937;
            }

            .addresses-section {
                display: grid;
                grid-template-columns: 1fr 1fr 1fr;
                gap: 30px;
                margin: 25px 0;
            }

            .address-block h4 {
                font-size: 11px;
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 8px;
                text-transform: uppercase;
            }

            .address-content {
                font-size: 10px;
                line-height: 1.5;
                color: #4b5563;
            }

            .customer-name {
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 5px;
            }

            .place-supply {
                margin: 20px 0;
                font-size: 11px;
            }

            .place-supply strong {
                color: #1f2937;
            }

            .items-table {
                width: 100%;
                border-collapse: collapse;
                margin: 25px 0;
                font-size: 10px;
            }

            .items-table th {
                background-color: #f9fafb;
                padding: 10px 5px;
                text-align: left;
                font-weight: bold;
                color: #1f2937;
                border: 1px solid #d1d5db;
                font-size: 9px;
            }

            .items-table td {
                padding: 8px 5px;
                border: 1px solid #d1d5db;
                vertical-align: top;
                font-size: 9px;
            }

            .items-table .item-description {
                max-width: 180px;
                word-wrap: break-word;
            }

            .items-table .number-cell {
                text-align: right;
            }

            .summary-section {
                margin-top: 20px;
                display: flex;
                justify-content: flex-end;
            }

            .summary-table {
                width: 300px;
                font-size: 11px;
            }

            .summary-table td {
                padding: 5px 10px;
                border-bottom: 1px solid #e5e7eb;
            }

            .summary-table .label {
                text-align: left;
                font-weight: 500;
                color: #4b5563;
            }

            .summary-table .amount {
                text-align: right;
                color: #1f2937;
                font-weight: 500;
            }

            .total-row {
                background-color: #f9fafb;
                font-weight: bold;
                border-top: 2px solid #d1d5db !important;
            }

            .total-row td {
                color: #1f2937;
                font-size: 12px;
                padding: 10px;
            }

            .notes-section {
                margin-top: 30px;
                padding: 20px;
                background-color: #f9fafb;
                border-radius: 6px;
                border-left: 4px solid #3b82f6;
            }

            .notes-title {
                font-size: 12px;
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 8px;
            }

            .notes-content {
                font-size: 10px;
                color: #4b5563;
                line-height: 1.5;
            }

            .bank-details-section {
                margin-top: 30px;
                display: grid;
                grid-template-columns: 1fr auto;
                gap: 30px;
                align-items: start;
            }

            .bank-details {
                background-color: #f9fafb;
                border: 1px solid #e5e7eb;
                border-radius: 6px;
                padding: 20px;
            }

            .bank-title {
                font-size: 12px;
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 15px;
                text-transform: uppercase;
                border-bottom: 1px solid #e5e7eb;
                padding-bottom: 5px;
            }

            .bank-info {
                font-size: 10px;
                color: #4b5563;
                line-height: 1.6;
            }

            .bank-info .bank-row {
                display: flex;
                margin-bottom: 8px;
            }

            .bank-info .bank-label {
                font-weight: bold;
                color: #1f2937;
                min-width: 120px;
            }

            .bank-info .bank-value {
                color: #4b5563;
            }

            .qr-section {
                text-align: center;
                padding: 15px;
                border: 1px solid #e5e7eb;
                border-radius: 6px;
                background-color: #ffffff;
            }

            .qr-title {
                font-size: 10px;
                font-weight: bold;
                color: #1f2937;
                margin-bottom: 10px;
                text-transform: uppercase;
            }

            .qr-code {
                width: 120px;
                height: 120px;
                border: 1px solid #e5e7eb;
                background: white;
            }

            .qr-text {
                font-size: 8px;
                color: #6b7280;
                margin-top: 8px;
                line-height: 1.3;
            }

            .action-buttons {
                position: fixed;
                top: 20px;
                right: 20px;
                display: flex;
                gap: 10px;
                z-index: 1000;
            }

            .btn {
                padding: 10px 20px;
                border: none;
                border-radius: 6px;
                font-weight: 500;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                transition: all 0.2s;
                font-size: 14px;
            }

            .btn-primary {
                background: #3b82f6;
                color: white;
            }

            .btn-primary:hover {
                background: #2563eb;
                color: white;
            }

            .btn-secondary {
                background: #6b7280;
                color: white;
            }

            .btn-secondary:hover {
                background: #4b5563;
                color: white;
            }

            .btn-success {
                background: #10b981;
                color: white;
            }

            .btn-success:hover {
                background: #059669;
                color: white;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                .invoice-content {
                    padding: 20px;
                }

                .addresses-section {
                    grid-template-columns: 1fr;
                    gap: 20px;
                }

                .bank-details-section {
                    grid-template-columns: 1fr;
                    gap: 20px;
                }

                .action-buttons {
                    position: relative;
                    top: auto;
                    right: auto;
                    margin-bottom: 20px;
                    justify-content: center;
                    flex-wrap: wrap;
                }

                .items-table {
                    font-size: 8px;
                }

                .items-table th,
                .items-table td {
                    padding: 6px 3px;
                }

                .qr-section {
                    margin-top: 20px;
                }

                .company-logo img {
                    max-height: 40px !important;
                }
            }

            @media print {
                .bank-details-section {
                    grid-template-columns: 1fr auto;
                    page-break-inside: avoid;
                }
            }
        </style>
</head>

<body class="bg-gray-100">
    <!-- Action Buttons -->
    <div class="action-buttons no-print">
        <a href="/invoices" class="btn btn-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Invoices
        </a>
        <button onclick="window.print()" class="btn btn-primary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z">
                </path>
            </svg>
            Print
        </button>
        <a href="/admin-download-pdf/<%= invoice._id %>" class="btn btn-success">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                </path>
            </svg>
            Download PDF
        </a>
    </div>

    <!-- Invoice Container -->
    <div class="invoice-container">
        <div class="invoice-content">
            <!-- Header -->
            <div class="invoice-header">
                <div>
                    <div class="invoice-title">TAX INVOICE</div>
                    <div class="original-text">ORIGINAL FOR RECIPIENT</div>
                </div>
                <div class="company-logo">
                    <img src="/images/krushiyuga-logo.png" alt="Krushiyuga Logo"
                        style="max-height: 60px; margin-bottom: 10px;">
                </div>
            </div>

            <!-- Company Details -->
            <div class="company-details">
                <div class="company-name">
                    <%= invoice.from.companyName %>
                </div>
                <div class="company-info">
                    GSTIN <%= invoice.from.gstin %><br>
                        <%= invoice.from.description %><br>
                            <%- invoice.from.address.replace(/\n/g, '<br>' ) %><br>
                                Mobile: <%= invoice.from.mobile %> &nbsp;&nbsp; Email: <%= invoice.from.email %>
                </div>
            </div>

            <!-- Invoice Meta Information -->
            <div class="invoice-meta">
                <div class="meta-item">
                    <span class="meta-label">Invoice #:</span>
                    <%= invoice.invoiceNumber %>
                </div>
                <div class="meta-item">
                    <span class="meta-label">Invoice Date:</span>
                    <%= new Date(invoice.issueDate || invoice.createdAt).toLocaleDateString('en-GB') %>
                </div>
            </div>

            <!-- Customer and Address Details -->
            <div class="addresses-section">
                <div class="address-block">
                    <h4>Customer Details:</h4>
                    <div class="address-content">
                        <div class="customer-name">
                            <%= invoice.to.companyName %>
                        </div>
                        <%= invoice.to.email %><br>
                            <% if (invoice.to.phone) { %>
                                <%= invoice.to.phone %><br>
                                    <% } %>
                                        <% if (invoice.to.gstin) { %>
                                            GSTIN: <%= invoice.to.gstin %>
                                                <% } %>
                    </div>
                </div>
                <div class="address-block">
                    <h4>Billing Address:</h4>
                    <div class="address-content">
                        <%- invoice.to.address ? invoice.to.address.replace(/\n/g, '<br>' ) : 'N/A' %>
                    </div>
                </div>
                <div class="address-block">
                    <h4>Shipping Address:</h4>
                    <div class="address-content">
                        <%- invoice.to.address ? invoice.to.address.replace(/\n/g, '<br>' ) : 'N/A' %>
                    </div>
                </div>
            </div>

            <!-- Place of Supply -->
            <div class="place-supply">
                <strong>Place of Supply:</strong> KARNATAKA
            </div>

            <!-- Items Table -->
            <table class="items-table">
                <thead>
                    <tr>
                        <th style="width: 30px;">#</th>
                        <th style="width: 180px;">Item</th>
                        <th style="width: 60px;">Rate/Item</th>
                        <th style="width: 40px;">Qty</th>
                        <th style="width: 70px;">Taxable Value</th>
                        <th style="width: 70px;">Tax Amount</th>
                        <th style="width: 55px;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% invoice.items.forEach((item, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td class="item-description">
                                <strong>
                                    <%= item.productName %>
                                </strong><br>
                                <span style="color: #6b7280; font-size: 8px;">
                                    <%= item.description %>
                                </span>
                            </td>
                            <td class="number-cell">₹<%= item.rate.toFixed(2) %>
                            </td>
                            <td class="number-cell">
                                <%= item.quantity %>
                                    <%= item.unit %>
                            </td>
                            <td class="number-cell">₹<%= (item.amount - item.gstAmount).toFixed(2) %>
                            </td>
                            <td class="number-cell">₹<%= item.gstAmount.toFixed(2) %><br>
                                    <span style="color: #6b7280; font-size: 8px;">(<%= item.gst %>%)</span>
                            </td>
                            <td class="number-cell">₹<%= item.amount.toFixed(2) %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <!-- Summary Section -->
            <div class="summary-section">
                <table class="summary-table">
                    <tr>
                        <td class="label">Subtotal:</td>
                        <td class="amount">₹<%= (invoice.subtotal || 0).toFixed(2) %>
                        </td>
                    </tr>
                    <tr>
                        <td class="label">Total GST:</td>
                        <td class="amount">₹<%= (invoice.totalGST || 0).toFixed(2) %>
                        </td>
                    </tr>
                    <% if (invoice.discount && invoice.discount> 0) { %>
                        <tr>
                            <td class="label">Discount (<%= invoice.discount %>%):</td>
                            <td class="amount">-₹<%= (invoice.discountAmount || 0).toFixed(2) %>
                            </td>
                        </tr>
                        <% } %>
                            <tr class="total-row">
                                <td class="label">TOTAL:</td>
                                <td class="amount">₹<%= invoice.totalAmount.toFixed(2) %>
                                </td>
                            </tr>
                </table>
            </div>

            <!-- Notes Section -->
            <% if (invoice.notes && invoice.notes.trim()) { %>
                <div class="notes-section">
                    <div class="notes-title">Notes:</div>
                    <div class="notes-content">
                        <%= invoice.notes %>
                    </div>
                </div>
                <% } %>

                    <!-- Bank Details and QR Code Section -->
                    <div class="bank-details-section">
                        <div class="bank-details">
                            <div class="bank-title">Bank Details</div>
                            <div class="bank-info">
                                <div class="bank-row">
                                    <span class="bank-label">Bank Name:</span>
                                    <span class="bank-value">State Bank of India</span>
                                </div>
                                <div class="bank-row">
                                    <span class="bank-label">Account Number:</span>
                                    <span class="bank-value">123456789012345</span>
                                </div>
                                <div class="bank-row">
                                    <span class="bank-label">Account Name:</span>
                                    <span class="bank-value">KRUSHIYUGA PRIVATE LIMITED</span>
                                </div>
                                <div class="bank-row">
                                    <span class="bank-label">IFSC Code:</span>
                                    <span class="bank-value">SBIN0001234</span>
                                </div>
                                <div class="bank-row">
                                    <span class="bank-label">Branch:</span>
                                    <span class="bank-value">Bangalore Main Branch</span>
                                </div>
                                <div class="bank-row">
                                    <span class="bank-label">Account Type:</span>
                                    <span class="bank-value">Current Account</span>
                                </div>
                            </div>
                        </div>

                        <div class="qr-section">
                            <div class="qr-title">Scan to Pay</div>
                            <div id="qr-code-container">
                                <!-- Fallback QR Code image -->
                                <img src="/images/QR-Code.png" alt="QR Code" class="qr-code"
                                    style="max-width: 120px; max-height: 120px;">
                            </div>
                            <div class="qr-text">
                                Scan this QR code with any UPI app<br>
                                to make instant payment
                            </div>
                        </div>
                    </div>

                    <!-- Footer Information -->
                    <div
                        style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #e5e7eb; font-size: 9px; color: #6b7280; text-align: center;">
                        Thank you for your business! | This is a computer-generated invoice.
                    </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    <script>
        // Generate dynamic QR Code for payment (optional)
        function generateDynamicQRCode() {
            const paymentInfo = {
                merchantName: "KRUSHIYUGA",
                amount: "<%= invoice.totalAmount %>",
                invoiceNumber: "<%= invoice.invoiceNumber %>",
                upiId: "krushiyuga@paytm" // Replace with actual UPI ID
            };

            // Create UPI payment string
            const upiString = `upi://pay?pa=${paymentInfo.upiId}&pn=${paymentInfo.merchantName}&am=${paymentInfo.amount}&tr=${paymentInfo.invoiceNumber}&cu=INR`;

            // Create a canvas element for the dynamic QR code
            const canvas = document.createElement('canvas');

            // Generate QR code
            QRCode.toCanvas(canvas, upiString, {
                width: 120,
                height: 120,
                margin: 1,
                color: {
                    dark: '#000000',
                    light: '#FFFFFF'
                }
            }, function (error) {
                if (!error) {
                    // Replace the static image with dynamic QR code
                    const container = document.getElementById('qr-code-container');
                    container.innerHTML = '';
                    container.appendChild(canvas);
                }
            });
        }

        // Print functionality
        function printInvoice() {
            window.print();
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function () {
            // Uncomment the line below to use dynamic QR codes instead of static image
            // generateDynamicQRCode();

            // Add click handler to QR code for dynamic generation
            const qrContainer = document.getElementById('qr-code-container');
            qrContainer.addEventListener('click', function () {
                generateDynamicQRCode();
                this.style.cursor = 'default';
            });
            qrContainer.style.cursor = 'pointer';
            qrContainer.title = 'Click to generate dynamic payment QR code';
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function (event) {
            // Ctrl+P for print
            if (event.ctrlKey && event.key === 'p') {
                event.preventDefault();
                printInvoice();
            }
            // Escape to go back
            if (event.key === 'Escape') {
                window.location.href = '/invoices';
            }
        });
    </script>
</body>

</html>