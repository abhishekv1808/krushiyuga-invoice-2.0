<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/navbar.ejs') %>

            <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <!-- Header -->
                <div class="mb-8 animate-slide-up">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
                        <div>
                            <h1 class="text-3xl font-bold text-gray-900 mb-2">Admin Dashboard</h1>
                            <p class="text-gray-600">Welcome back<% if (typeof adminEmail !=='undefined' && adminEmail)
                                    { %>
                                    , <%= adminEmail %>
                                        <% } %>
                            </p>
                        </div>
                        <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row gap-3">
                            <a href="/invoices"
                                class="px-4 py-2 border border-blue-300 rounded-lg hover:bg-blue-50 transition-colors duration-200 text-blue-600 hover:text-blue-700 font-medium text-center">
                                View All Invoices
                            </a>
                            <a href="/products"
                                class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50 transition-colors duration-200 shadow-sm text-center">
                                <i class="fas fa-box text-green-500 mr-2"></i>
                                Manage Products
                            </a>
                            <a href="/create-invoice"
                                class="bg-green-500 border border-green-500 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-green-600 transition-colors duration-200 shadow-sm text-center">
                                <i class="fas fa-plus mr-2"></i>
                                Create Invoice
                            </a>
                            <form action="/admin-logout" method="POST" class="inline">
                                <button type="submit"
                                    class="w-full cursor-pointer bg-red-500 border border-red-500 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-600 transition-colors duration-200 shadow-sm">
                                    <i class="fas fa-sign-out-alt mr-2"></i>
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                <% if (typeof loginSuccessMessage !=='undefined' && loginSuccessMessage) { %>
                    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                        <div class="flex">
                            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <div class="ml-3">
                                <p class="text-sm text-green-700">
                                    <%= loginSuccessMessage %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                                <div class="flex">
                                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                    <div class="ml-3">
                                        <p class="text-sm text-red-700">
                                            <%= errorMessage %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <% if (typeof successMessage !=='undefined' && successMessage) { %>
                                    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                                        <div class="flex">
                                            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd"
                                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                    clip-rule="evenodd"></path>
                                            </svg>
                                            <div class="ml-3">
                                                <p class="text-sm text-green-700">
                                                    <%= successMessage %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                                        <!-- Stats Cards -->
                                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                                            <!-- Total Invoices -->
                                            <div
                                                class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow duration-300 animate-scale-in">
                                                <div class="flex items-center justify-between">
                                                    <div>
                                                        <p
                                                            class="text-sm font-medium text-gray-600 uppercase tracking-wide">
                                                            Total Invoices</p>
                                                        <p class="text-3xl font-bold text-gray-900 mt-2">
                                                            <%= dashboardStats.totalInvoices %>
                                                        </p>
                                                        <p class="text-sm text-blue-600 mt-1 flex items-center">
                                                            <i class="fas fa-file-invoice text-blue-600 mr-2"></i>
                                                            Total generated
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="w-16 h-16 bg-blue-500 rounded-xl flex items-center justify-center shadow-lg">
                                                        <i class="fas fa-file-invoice text-2xl text-white"></i>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Total Revenue -->
                                            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow duration-300 animate-scale-in"
                                                style="animation-delay: 0.1s;">
                                                <div class="flex items-center justify-between">
                                                    <div>
                                                        <p
                                                            class="text-sm font-medium text-gray-600 uppercase tracking-wide">
                                                            Total Revenue</p>
                                                        <p class="text-3xl font-bold text-gray-900 mt-2">â‚¹<%=
                                                                Math.round(dashboardStats.totalRevenue).toLocaleString('en-IN')
                                                                %>
                                                        </p>
                                                        <p class="text-sm text-green-600 mt-1 flex items-center">
                                                            <i class="fas fa-rupee-sign text-green-600 mr-2"></i>
                                                            All time earnings
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="w-16 h-16 bg-green-500 rounded-xl flex items-center justify-center shadow-lg">
                                                        <i class="fas fa-chart-line text-2xl text-white"></i>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- This Month Invoices -->
                                            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow duration-300 animate-scale-in"
                                                style="animation-delay: 0.2s;">
                                                <div class="flex items-center justify-between">
                                                    <div>
                                                        <p
                                                            class="text-sm font-medium text-gray-600 uppercase tracking-wide">
                                                            This Month
                                                        </p>
                                                        <p class="text-3xl font-bold text-gray-900 mt-2">
                                                            <%= dashboardStats.monthlyInvoices %>
                                                        </p>
                                                        <p class="text-sm text-blue-600 mt-1 flex items-center">
                                                            <i class="fas fa-calendar-alt text-blue-600 mr-2"></i>
                                                            Current month
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="w-16 h-16 bg-blue-500 rounded-xl flex items-center justify-center shadow-lg">
                                                        <i class="fas fa-calendar-month text-2xl text-white"></i>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- View All Invoices -->
                                            <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-shadow duration-300 animate-scale-in"
                                                style="animation-delay: 0.3s;">
                                                <div class="flex items-center justify-between">
                                                    <div>
                                                        <p
                                                            class="text-sm font-medium text-gray-600 uppercase tracking-wide">
                                                            CRM System</p>
                                                        <p class="text-xl font-bold text-gray-900 mt-2">View All</p>
                                                        <a href="/invoices"
                                                            class="text-sm text-purple-600 mt-1 flex items-center hover:text-purple-800 transition-colors">
                                                            <i class="fas fa-arrow-right text-purple-600 mr-2"></i>
                                                            Manage invoices
                                                        </a>
                                                    </div>
                                                    <div
                                                        class="w-16 h-16 bg-purple-500 rounded-xl flex items-center justify-center shadow-lg">
                                                        <i class="fas fa-cogs text-2xl text-white"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Recent Invoices Table -->
                                        <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden animate-scale-in"
                                            style="animation-delay: 0.4s;">
                                            <div class="px-6 py-4 border-b border-gray-200">
                                                <div class="flex justify-between items-center">
                                                    <h2 class="text-xl font-semibold text-gray-900">Recent Invoices</h2>
                                                    <div class="flex space-x-2">
                                                        <select
                                                            class="bg-gray-50 border border-gray-300 text-gray-700 text-sm rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500">
                                                            <option>Last 30 days</option>
                                                            <option>Last 7 days</option>
                                                            <option>Last 3 months</option>
                                                        </select>
                                                        <a href="/admin/invoices"
                                                            class="text-blue-600 hover:text-blue-700 text-sm font-medium px-3 py-2 hover:bg-blue-50 rounded-lg transition-colors duration-200">
                                                            View All
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="overflow-x-auto">
                                                <table class="w-full">
                                                    <thead class="bg-gray-50 border-b border-gray-200">
                                                        <tr>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Invoice ID</th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Client</th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Amount</th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Status</th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Date
                                                            </th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="bg-white divide-y divide-gray-200">
                                                        <% if (dashboardStats.recentInvoices &&
                                                            dashboardStats.recentInvoices.length> 0) { %>
                                                            <% dashboardStats.recentInvoices.forEach((invoice, index)=>
                                                                { %>
                                                                <tr
                                                                    class="hover:bg-gray-50 transition-colors duration-150">
                                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                                        <div class="text-sm font-medium text-gray-900">
                                                                            <%= invoice.invoiceNumber %>
                                                                        </div>
                                                                    </td>
                                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                                        <div class="flex items-center">
                                                                            <div
                                                                                class="w-10 h-10 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center">
                                                                                <span
                                                                                    class="text-white text-sm font-medium">
                                                                                    <%= (invoice.to &&
                                                                                        invoice.to.companyName) ?
                                                                                        invoice.to.companyName.substring(0,
                                                                                        2).toUpperCase() : 'XX' %>
                                                                                </span>
                                                                            </div>
                                                                            <div class="ml-3">
                                                                                <div
                                                                                    class="text-sm font-medium text-gray-900">
                                                                                    <%= (invoice.to &&
                                                                                        invoice.to.companyName) ?
                                                                                        invoice.to.companyName
                                                                                        : 'Unknown Company' %>
                                                                                </div>
                                                                                <div class="text-sm text-gray-500">
                                                                                    <%= (invoice.to && invoice.to.email)
                                                                                        ? invoice.to.email : 'No email'
                                                                                        %>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                                        <div
                                                                            class="text-sm font-semibold text-gray-900">
                                                                            â‚¹<%= invoice.totalAmount.toLocaleString() %>
                                                                        </div>
                                                                    </td>
                                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                                        <span
                                                                            class="inline-flex px-3 py-1 text-xs font-semibold bg-green-100 text-green-800 rounded-full">
                                                                            Paid
                                                                        </span>
                                                                    </td>
                                                                    <td
                                                                        class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                                        <%= new
                                                                            Date(invoice.createdAt).toLocaleDateString('en-IN')
                                                                            %>
                                                                    </td>
                                                                    <td
                                                                        class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                                                        <% if (invoice.pdfUrl || invoice.localPdfPath) {
                                                                            %>
                                                                            <a href="/view-pdf/<%= invoice._id %>"
                                                                                target="_blank"
                                                                                class="bg-blue-50 hover:bg-blue-100 text-blue-700 px-3 py-1 rounded-lg text-xs font-medium transition-colors duration-200 border border-blue-200">
                                                                                View
                                                                            </a>
                                                                            <a href="/admin-download-pdf/<%= invoice._id %>"
                                                                                class="bg-gray-50 hover:bg-gray-100 text-gray-700 px-3 py-1 rounded-lg text-xs font-medium transition-colors duration-200 border border-gray-200">
                                                                                Download
                                                                            </a>
                                                                            <% } else { %>
                                                                                <button
                                                                                    onclick="alert('PDF not available')"
                                                                                    class="bg-gray-50 text-gray-400 px-3 py-1 rounded-lg text-xs font-medium border border-gray-200 cursor-not-allowed">
                                                                                    No PDF
                                                                                </button>
                                                                                <% } %>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                                    <% } else { %>
                                                                        <tr>
                                                                            <td colspan="6"
                                                                                class="px-6 py-8 text-center text-gray-500">
                                                                                <div class="flex flex-col items-center">
                                                                                    <svg class="w-12 h-12 text-gray-400 mb-2"
                                                                                        fill="none"
                                                                                        stroke="currentColor"
                                                                                        viewBox="0 0 24 24">
                                                                                        <path stroke-linecap="round"
                                                                                            stroke-linejoin="round"
                                                                                            stroke-width="2"
                                                                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                                                                                        </path>
                                                                                    </svg>
                                                                                    <p class="text-sm">No invoices found
                                                                                    </p>
                                                                                    <a href="/admin/create-invoice"
                                                                                        class="text-blue-600 hover:text-blue-700 text-sm font-medium mt-2">Create
                                                                                        your first invoice</a>
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                        <% } %>
                                                    </tbody>

                                                </table>
                                            </div>

                                            <!-- Table Footer -->
                                            <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
                                                <div class="flex justify-between items-center text-sm text-gray-600">
                                                    <span>Showing <%= dashboardStats.recentInvoices ?
                                                            dashboardStats.recentInvoices.length : 0 %> of <%=
                                                                dashboardStats.totalInvoices %> invoices</span>
                                                    <div class="flex space-x-2">
                                                        <a href="/invoices"
                                                            class="px-3 py-1 border border-gray-300 rounded-lg hover:bg-gray-100 transition-colors duration-200 text-blue-600 hover:text-blue-700 font-medium">
                                                            View All Invoices
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
            </main>

            <script>
                // Auto-hide success/error messages after 5 seconds
                setTimeout(() => {
                    const alerts = document.querySelectorAll('.bg-red-50, .bg-green-50');
                    alerts.forEach(alert => {
                        alert.style.transition = 'opacity 0.5s';
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 500);
                    });
                }, 5000);
            </script>

    </body>

    </html>