<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/navbar.ejs') %>

            <main>
                <!-- Hero Section -->
                <section class="relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-indigo-600/10"></div>
                    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
                        <div class="text-center animate-slide-up">
                            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 mb-6">
                                Professional
                                <span
                                    class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
                                    Invoice Generator
                                </span>
                            </h1>
                            <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto leading-relaxed">
                                Create, manage, and track professional invoices effortlessly. Streamline your billing
                                process with our
                                intuitive invoice generator designed for modern businesses.
                            </p>

                            <!-- Search Bar -->
                            <div class="max-w-2xl mx-auto mb-12">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                        </svg>
                                    </div>
                                    <input type="text"
                                        placeholder="Search invoices by number, client name, or amount..."
                                        class="w-full pl-12 pr-24 py-4 text-lg border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-200 bg-white/80 backdrop-blur-sm shadow-lg hover:shadow-xl"
                                        id="invoiceSearch">
                                    <button
                                        class="absolute inset-y-0 right-0 px-6 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-r-xl transition-all duration-200 transform hover:scale-105 font-medium">
                                        Search
                                    </button>
                                </div>
                                <div class="mt-4 flex flex-wrap justify-center gap-2 text-sm text-gray-500">
                                    <span class="bg-white/60 px-3 py-1 rounded-full">Try: "INV-2024-001"</span>
                                    <span class="bg-white/60 px-3 py-1 rounded-full">Try: "John Doe"</span>
                                    <span class="bg-white/60 px-3 py-1 rounded-full">Try: "$1,500"</span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div
                                class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6">
                                <button
                                    class="w-full sm:w-auto bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white px-8 py-4 rounded-xl text-lg font-medium transition-all duration-200 transform hover:scale-105 shadow-xl hover:shadow-2xl">
                                    Create New Invoice
                                </button>
                                <button
                                    class="w-full sm:w-auto bg-white/80 hover:bg-white text-gray-700 border-2 border-gray-300 hover:border-gray-400 px-8 py-4 rounded-xl text-lg font-medium transition-all duration-200 backdrop-blur-sm shadow-lg hover:shadow-xl">
                                    View Templates
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Decorative Elements -->
                    <div class="absolute top-20 right-10 w-20 h-20 bg-blue-200/30 rounded-full animate-bounce-subtle">
                    </div>
                    <div class="absolute bottom-20 left-10 w-16 h-16 bg-indigo-200/30 rounded-full animate-bounce-subtle"
                        style="animation-delay: 1s;"></div>
                </section>


            </main>


    </body>

    </html>